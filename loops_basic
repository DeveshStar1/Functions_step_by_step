package loops;

/**
 *
 * @author Devesh
 */
public class Loops {
   
    public void whileloop()
    {   
        int x = 1;
        while(x<5)
        {
            System.out.println("whileloop runs for  "+x);
            x++;
        
        }
    }
    public void dowhileloop()
    {
        int x=10;
        do{
            System.out.println("Nmber of dowhile loop run for "+x);
            x--;
        }while(x>1);
       
    }
    public void forloop()
    {
        
        for(int x=1;x<=10;x++)
        {
            System.out.println("For loop runs for  "+x);
        }
    }
    

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        Loops loo = new Loops();
        loo.whileloop();
        loo.dowhileloop();
        loo.forloop();
   
        // TODO code application logic here
    }
    
}
